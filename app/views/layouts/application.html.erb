<!DOCTYPE html>
<html>
<head>
  <title>
	<% if params[:locale] == 'ja' %>	
	<%= SHIBCERT_CONFIG['label']['ja']['site_title']  %>
	<% else %>
	<%= SHIBCERT_CONFIG['label']['en']['site_title']  %>
	<% end %>
  </title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if request.path.include?("/admin") %>
    <% control_name = 'admin' %>
  <% else %>
    <% control_name = 'certs' %>
  <% end %>
  <div class="navbar navbar-default" role="navigation">
	<div class="container-fluid">	
	  <div class="navbar-header">
	    <% if params[:locale] == 'ja' %>	
	      <%= link_to SHIBCERT_CONFIG['label']['ja']['site_title'],
		{controller: "certs", action: "index"}, class: "navbar-brand" %>
	    <% else %>
	      <%= link_to SHIBCERT_CONFIG['label']['en']['site_title'],
		{controller: "certs", action: "index"}, class: "navbar-brand" %>
	    <% end %>
	  </div>
	  <% if current_user %>
	  <div class="collapse navbar-collapse">
	    <ul class="nav navbar-nav navbar-right">
	      <% if params[:locale] == 'ja' %>
	        <li>
                  <p class="navbar-text">[<%= link_to 'English', 
			{controller: control_name, action: "index", locale: "en"} %>|Japanese]</p>
	        </li>
	      <% else %>
	        <li>
		  <p class="navbar-text">[English|<%= link_to 'Japanese',
			{controller: control_name, action: "index", locale: "ja"} %>]</p>
	        </li>
	      <% end %>
	      <li>
                <p class="navbar-text"><%= t('nav.user') + ' ' + current_user.name %></p>
	      </li>
	      <li class="dropdown">
	 	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" ><%= t('nav.menu') %><span class="caret"></a>
	    	<ul class="dropdown-menu">
		  <!--
		  <li><%= link_to t('nav.help'),
			  {controller: "certs", action: "index"} %></li>
		  -->
		  <li><%= link_to t('nav.logout') + ' (' + current_user.uid + ')', signout_path %></li>	
                    <% if AdminController.isAdmin(current_user) %>
		      <li><%= link_to t('nav.admin'),
			  {controller: "admin", action: "index"} %></li>
		    <% end %>
	 	</ul>
	      </li>
	    </ul>
	  </div>
	  <% end %>
	</div>
  </div>
  <div class="container">
    <% ln = params[:locale] == 'ja' ? 'ja': 'en' %>
    <% if current_user %>
      <%= yield %>	
    <% else %>
      <p><%= t('certs.index.dashboard_text')%></p>
      <p><%= SHIBCERT_CONFIG['label'][ln]['intro_text'] %></p>
      <br>
      <div class="omniauth">
      <p><%= link_to t('login.loginlink'), "/auth/shibboleth", class: 'btn btn-primary' %> <%= t('login.logintext')%></p>
      <% if Rails.env == 'development'  %>
        <p><%= link_to t('login.otherloginlink'), "/auth/github", class: 'btn btn-primary' %> <%= t('login.otherlogintext')%></p>
      <% end %>
      </div>
    <% end %>
  </div>
</body>
</html>
